<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sinner.animatetextview.MainActivity">


    <TextView
        android:text="click it "
        android:layout_width="68dp"
        android:layout_height="88dp"
        android:gravity="center"
        android:onClick="test"
        android:background="#E7C7F7"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="84dp" />

    <com.example.sinner.animatetextview.view.AnimateTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/animateTextView1"
        app:textSize="20"
        app:start="0"
        app:duration="1000"
        app:end="100"
        app:mode="animate"
        app:textColor="@color/colorAccent"
        android:background="#ECECEC"
        />

    <com.example.sinner.animatetextview.view.AnimateTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/animateTextView2"
        app:textSize="40"
        app:textColor="@color/colorPrimary"
        app:start="0"
        app:duration="5000"
        app:end="1234"
        app:mode="cashout"
        android:background="#ECECEC"
        android:layout_below="@+id/animateTextView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <com.example.sinner.animatetextview.view.AnimateTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/animateTextView3"
        app:textSize="20"
        app:start="0"
        app:duration="1000"
        app:end="90"
        app:mode="downcount"
        app:textColor="@color/colorAccent"
        app:textonleft="还有"
        app:textonright="秒"
        android:layout_below="@+id/animateTextView2"
        android:background="#ECECEC"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <com.example.sinner.animatetextview.AnimateTextView
        android:id="@+id/tv_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="0"
        android:onClick="test"
        android:textSize="32sp"
        android:layout_alignBottom="@+id/animateTextView3"
        android:layout_alignParentEnd="true"
        android:background="#ECECEC"
        android:layout_marginEnd="25dp" />
</RelativeLayout>
